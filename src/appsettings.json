  "ApplicationSettings": {
    "IdentityProvider": {
      "AuthorityUri": "",
      "RequireHttpsMetadata": false,
      "ApiSecret": "",
      "CacheMinutes": 10
    },

    "Security": {
      "Synchronization": {
        "Enabled": true,
        "ClientId": "scim_client",
        "ResourceUri": "https://localhost:5005",
        "Secret": "secret"
      },
      "AllowedOrigins": []
    },

    "Messaging": {
      "SenderType": "Smtp",
      "FromAddress": "",
      "HostName": "",
      "Port": 25,
      "UserName": "",
