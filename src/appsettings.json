      "TokenValues": [],
      "QueueProcessingIntervalSeconds": 5
    },

    "Storage": {
      "RootPath": "",
      "StorageType": "Local"
    },

    "ApplicationInsights": {
      "InstrumentationKey": "130f91d1-5d0b-4642-bcc3-f897a1c2d7b2",
      "ConnectionString": "InstrumentationKey=130f91d1-5d0b-4642-bcc3-f897a1c2d7b2;IngestionEndpoint=https://eastus2-0.in.applicationinsights.azure.com/",
      "Tags": ""
    },

    "Notifications": {
      "Enabled": true,
      "BackingType": "Redis",
      "AlternativeRedisConnection": "",
      "BackplaneChannelPrefix": "signalr:production:"
    },

    "Advanced": {
      "EnableDocs": true,
      "MinimumCompletionPortThreads": 200,
      "MaxDegreeOfParallelism": 0,
      "MemoryCacheLifeMinutes": 10,
      "ForceSsl": true,
      "ShowDiagnostics": false,
      "AppDataSubFolderName": "App_Data",
      "MinifyJsonOutput": true
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "ApplicationInsights",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Bastille-ID-API"
    }
  },
  "AllowedHosts": "*"
}